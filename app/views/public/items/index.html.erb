<div class='container'>
    <div class='row'>
    <div class="col-md-2">
      <%= render "sidebar", genres: @genres %>
    </div>
    <div class="col-md-10">
      <h4><strong>商品一覧</strong><span class="font">(全<%= @items.count %>件)</span></h4>

        <% @items.each do |item| %>
        <div class="col-xs-3 mt-3 mx-3 product-photo">
          <div class="mx-auto imgWrap">
          <%= link_to public_item_path(item.id) do %>
            <%= image_tag item.image.variant( resize: "200x150" ) %><br>
            <%= item.name %>
          <% end %>
            </div>
            ￥<%= item.price.to_s(:delimited) %>
      <% end %>
     </div>
    </div>
  </div>
</div>
