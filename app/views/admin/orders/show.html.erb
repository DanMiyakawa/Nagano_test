<h2>注文履歴詳細</h2>

<table class="table">
  <tbody>
    <tr>
      <th>購入者</th>
      <th><%= link_to admin_customer_path(@order.customer.id) do %>
          <%= @order.customer.full_name %>
          <% end %>
      </th>
    </tr>
    <tr>
      <th>注文日</th>
      <th><%= @order.created_at.strftime("%Y/%m/%d") %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th><%= "〒#{@order.postal_code} #{@order.address} #{@order.name}" %></th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_method_i18n %></th>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <th>
        <%= f.select :order_status,Order.order_statuses.keys %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </th>
      <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= (amount = (order_detail.item.add_tax_price * order_detail.amount)).to_s(:delimited) %></td>
      <td>ステータス</td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-bordered">
  <tr><th class="table-active">送料</th><td>800</td></tr>
  <tr><th class="table-active">商品合計</th><td><%= @order.total_payment - 800 %></td></tr>
  <tr><th class="table-active">請求合計</th><td><%= @order.total_payment %></td></tr>
</table>