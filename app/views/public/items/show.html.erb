<div class="container px-5 px-sm-0'">
  <div class="row">
    <div class='col-md-3'>
      <table class="table table-bordered table-hover text-center ec-genre-list" >
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, public_genre_path(genre.id), class:"ec-genre-list-item"%>
          </td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-9 col-xs-offset-1">
      <%= image_tag @item.image.variant( resize: "250" ) %>
    </div>
    <div class="col-6 px-0 mt-5 mx-auto">
      <h4><%= @item.name %></h4>
      <h5 class="mt-3"><%= safe_join(@item.introduction.split("\n"),tag(:br)) %></h5>
      <div class="font-weight-bold mt-3 text-nowrap">
        ￥<%= @item.add_tax_price.to_s(:delimited) %>(税込)
      </div>
      <div class="mt-5">
        <% if @item.is_active %>
          <%= render "item_amount_form", cart_item: @cart_item, item: @item %>
        <% else %>
          <p class="text-danger font-weight-bold">売切れ</p>
        <% end %>
      </div>
    </div>
  </div>
</div>