<h2>配送先登録/一覧</h2>
<%= form_with model: @shipping_address, url: public_shipping_addresses_path, local: true do |f| %>
<table>
  <tr>
    <div calss="form-group">
      <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
      <td><%= f.text_field :shipping_postal_code, placeholder:"0000000", id: "shipping_postal_code" %></td>
    </div>
  </tr>
  <tr>
    <div calss="form-group">
      <th><%= f.label :"住所" %></th>
      <td><%= f.text_field :shipping_address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "50", id: "customer_address" %></td>
    </div>
  </tr>
  <tr>
    <div calss="form-group">
      <th><%= f.label :"宛名" %></th>
      <td><%= f.text_field :shipping_name, placeholder:"令和道子" %></td>
      <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
    </div>
  </tr>
</table>
<% end %>

<table class="table table-bordered">
  <thead class="table-active">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛先</th></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.shipping_postal_code %></td>
        <td><%= shipping_address.shipping_address %></td>
        <td><%= shipping_address.shipping_name %></td>
        <td><%= link_to "編集する", edit_public_shipping_address_path(shipping_address), class:"btn btn-success" %> <%= link_to "削除する", public_shipping_address_path(shipping_address), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>