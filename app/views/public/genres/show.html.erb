<div class='container'>
  <div class='row'>
    <div class="col-md-2">
      <%= render "public/items/sidebar", genres: @genres %>
    </div>
    <div class="col-md-10">
      <h4><strong><%= @genre.name %>一覧</strong><span class="font">(全<%= @genreitems.count %>件)</span></h4>
      <div class="row mx-auto">
		  	<% @genreitems.each do |item| %>
			  	<%= link_to public_item_path(item.id), data: {"turbolinks" => false}, class: "col-3 text-center text-dark text-nowrap" do %>
						<%= image_tag item.image.variant( resize: "200x150" ) %><br>
						<%= item.name %>
						￥<%= item.price.to_s(:delimited) %>
					<% end %>
			<% end %>
			</div>
		</div>
	</div>
</div>
