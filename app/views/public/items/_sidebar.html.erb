<table class="genre-table table table-bordered table-hover">
  <thead class="genre-thead">
    <tr>
      <th class="active">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td>
        <%= link_to genre.name, public_genre_path(genre.id), class:"ec-genre-list-item"%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>