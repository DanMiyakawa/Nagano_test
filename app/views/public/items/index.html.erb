<div class="container">
  <div class="row">
    <div class="col-xs-2">

    <table class="table table-bordered table-hover text-center ec-genre-list" >
      <thead>
      <th>ジャンル検索</th>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
      <tr><td>
        <%= link_to genre.name, public_genre_path(genre.id), class:"ec-genre-list-item"%>
      </td></tr>
      <% end %>
      </tbody>
    </table>
  </div>

    <div class="col-xs-9 col-xs-offset-1">
        <h3 class="mx-5 mt-5">商品一覧(全<%= @items.count %>件)</h3></br>
    </div>
    <div class="row mx-auto">
      <% @items.each do |item| %>
          <%= link_to public_item_path(item.id) , class: "col-3 text-center text-dark text-nowrap" do %>
            <%= image_tag item.image.variant( resize: "125x125" ) %></br>
            <%= item.name %></br>
            ￥<%= item.price.to_s(:delimited) %>
          <% end %>
      <% end %>
      </br>
    </div>
  </div>
</div>
