<div class="row">
	<div class="col-xs-2">
    <table class="table table-bordered table-hover text-center ec-genre-list" >
      <thead>
        <th>ジャンル検索</th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, public_genre_path(genre.id), class:"ec-genre-list-item"%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <h2><%= @genre.name %>一覧(全<%= @genreitems.count %>件)</h2>
	<div class="col-xs-9 col-xs-offset-1">
		<div class="product-card-content">
			<% @genreitems.each do |item| %>
				<div class="col-xs-3" style="padding-right: 0px; padding-left: 0px; margin: 10px 0;">
					<%= link_to public_item_path(item.id), data: {"turbolinks" => false} do %>
						<%= image_tag item.image.variant( resize: "125x125" ) %>
						<%= item.name %>
						￥<%= item.price.to_s(:delimited) %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>
