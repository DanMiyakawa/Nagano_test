<h2><%= @customer.full_name1 %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
  <div>
    会員ID
    <%= @customer.id %>
  </div>

  <div class="field">
      <%= f.label "氏名" %>
      <%= f.text_field :last_name, :size => "10", placeholder: @customer.last_name %>
      <%= f.text_field :first_name, :size => "10", placeholder: @customer.first_name %>
  </div>

  <div class="field">
      <%= f.label "フリガナ" %>
      <%= f.text_field :last_name_kana, :size => "10", placeholder: @customer.last_name_kana %>
      <%= f.text_field :first_name_kana, :size => "10", placeholder: @customer.first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: @customer.postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: @customer.address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: @customer.telephone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: @customer.email %>
  </div>

  <div class="field">
    <%= f.label "会員ステータス" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効" %>

    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会" %>
  </div>
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>

