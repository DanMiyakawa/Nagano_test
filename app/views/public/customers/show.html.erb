<div class="container">
  <div class="row">
    <div class="col-8 px-0">
      <div class="col-5">
        <h4 class="mx-auto">マイページ</h4>
        <h5 class="font-weight-bold">
          登録情報
          <%= link_to '編集する', edit_public_customer_path(@customer.id), class: "btn btn-success ml-5" %>
        </h5>
      </div>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">フリガナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th><td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="col-5 px-0">
        <table class="table table-borderless">
          <tr>
            <th>配送先</th>
            <th><%= link_to '一覧を見る',  public_shipping_addresses_path, class: "btn btn-primary" %></th>
          </tr>
          <tr>
            <th>注文履歴</th>
            <th><%= link_to '一覧を見る', public_orders_path, class: "btn btn-primary" %></th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
