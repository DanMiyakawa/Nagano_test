<h2><%= @customer.full_name1 %>さんの会員詳細</h2>
<table>
  <tr>
    <th>会員ID</th>
    <th><%= @customer.id %></th>
  </tr>
  <tr>
	  <th>氏名</th>
	  <th><%= @customer.full_name %></th>
  </tr>
  <tr>
	  <th>カナ</th>
	  <th><%= @customer.full_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <th><%= @customer.is_deleted %></th>
  </tr>
</table>

<div>
  <p><%= link_to "編集する", edit_admin_customer_path(@customer.id) %></p>
</div>


