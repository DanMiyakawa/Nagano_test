<h2>ジャンル編集</h2>

<%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name, class: "form-control name", placeholder: @genre.name  %>
    <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
  </div>
<% end %>