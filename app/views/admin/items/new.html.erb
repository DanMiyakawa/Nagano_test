<h2>商品新規登録</h2>
    <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label "商品画像" %>
        <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
      </div>

      <div class="form-group">
        <%= f.label "税抜価格" %>
        <%= f.text_field :price, class: "form-control price" %>円
      </div>

      <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.radio_button :is_active, true, checked: true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>