<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <table class="table table-bordered table-hover text-center ec-genre-list" >
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, public_genre_path(genre.id), class:"ec-genre-list-item"%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row mx-auto">
      <h3 class="mx-5 mt-5"><%= @genre.name %>一覧(全<%= @genreitems.count %>件)</h3>
		  	<% @genreitems.each do |item| %>
			  	<%= link_to public_item_path(item.id), data: {"turbolinks" => false}, class: "col-3 text-center text-dark text-nowrap" do %>
						<%= image_tag item.image.variant( resize: "125x125" ) %><br>
						<%= item.name %>
						￥<%= item.price.to_s(:delimited) %>
					<% end %>
			<% end %>
		</div>
	</div>
</div>
