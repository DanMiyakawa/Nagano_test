<h2>商品詳細</h2>

<%= image_tag @item.image, size:"100×100" %>

<table>
  <tbody>
    <tr>
      <th>商品名</th>
      <th><%= @item.name %></th>
    </tr>
    <tr>
      <th>商品説明</th>
      <th><%= @item.introduction %></th>
    </tr>
    <tr>
      <th>ジャンル</th>
      <th><%= @item.genre.name %></th>
    </tr>
    <tr>
      <th>税込価格<br>(税抜価格)</th>
      <th><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th><% if @item.is_active == true %>
            <p>販売中</p>
          <% else %>
            <p>販売停止中</p>
          <% end %>
      </th>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admin_item_path %>
