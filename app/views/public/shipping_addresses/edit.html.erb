<h2>配送先編集</h2>

<div class="col-8 mx-auto">
<%= form_with model: @shipping_address, url: public_shipping_address_path(@shipping_address), local: true do |f| %>
  <table>
    <tr>
      <div calss="form-group">
        <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
        <th><%= f.text_field :shipping_postal_code, placeholder:"0000000" %></th>
      </div>
    </tr>
    <tr>
      <div calss="form-group">
        <th><%= f.label :"住所" %></th>
        <th><%= f.text_field :shipping_address, placeholder:"住所を入力してください", :size => "50" %></th>
      </div>
    </tr>
    <tr>
      <div calss="form-group">
        <th><%= f.label :"宛名" %></th>
        <th><%= f.text_field :shipping_name, placeholder:"名前を入力してください", :size => "30"%></th>
      　<th class="ml-5"><%= f.submit "変更内容を保存", class:"btn btn-success" %></th>
      </div>
    </tr>
  </table>
<% end %>
</div>