<h2>会員一覧</h2>

<table>
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.full_name1, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-danger font-weight-bold">退会</p>
          <% end %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>