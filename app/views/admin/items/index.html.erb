<h2>商品一覧</h2>
<%= link_to new_admin_item_path do %>
  <button type="button" class="btn btn-Light shadow rounded-circle p-0 ml-auto font-weight-bold" style="width:2rem;height:2rem;">＋</button>
<% end %>
<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.is_active == true %>
            <p class="text-success font-weight-bold">販売中</p>
          <% else %>
            <p class="text-danger font-weight-bold">販売停止中</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>