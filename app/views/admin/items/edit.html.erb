<h2>商品編集</h2>

<%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
      <div class="form-group">
        <%= f.label "商品画像" %>
        <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label "税抜価格" %>
        <%= f.text_field :price, class: "form-control price" %>円
      </div>

      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
      </div>
    <% end %>