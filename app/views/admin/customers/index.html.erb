<div class="container">
  <div class="row">
    <div class="col-8 px-0 mx-auto">
    <h4>会員一覧</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td><%= link_to customer.full_name1, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_deleted == false %>
                    <p class="text-success font-weight-bold">有効</p>
                  <% else %>
                    <p class="text-danger font-weight-bold">退会</p>
                  <% end %>
              <td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>